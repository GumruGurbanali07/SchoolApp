
@{
    ViewData["Title"] = "Home Page";
    ViewData["ActiveHome"] = "active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- banner section -->
<section id="home" class="w3l-banner py-5">
    <div class="container pt-5 pb-md-4">
        <div class="row align-items-center">
            <div class="col-md-6 banner-left pt-md-0 pt-5">
                <h3 class="mb-sm-4 mb-3 title">Welcome to our school's website!</h3>
                <div class="mt-md-5 mt-4 mb-lg-0 mb-4">
                    <a class="btn button-style" href="/About/Index">
                        Who are we?<i class="fa fa-angle-double-right"
                            aria-hidden="true"></i></a>
                </div>
            </div>
            <div class="col-md-6 banner-right mt-md-0 mt-4">
                <img class="img-fluid" src="~/students.png" alt=" ">
            </div>
        </div>
    </div>
</section>
<!-- //banner section -->
<!-- banner bottom section -->
@await Component.InvokeAsync("HomePageLessons")
<!-- //banner bottom section -->
<!-- middle section -->
@await Component.InvokeAsync("HomePageAbout")
<!-- //middle section -->
<!-- teams 32 block -->
@await Component.InvokeAsync("HomePageTeachers")
